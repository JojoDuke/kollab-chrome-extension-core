{
    "manifest_version": 3,
    "name": "Kollab Extension",
    "description": "Collaboration chrome extension",
    "version": "0.0.8",
    "action" : {
        "default_popup": "popup.html",
        "default_title": "Kollab Extension",
        "default_icon" : "icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "screen-capture-icon.png",
                "fullscreen-icon.png",
                "kollabhome-icon.png",
                "selective-capture.png",
                "tempLogo.png",
                "logout-red.png",
                "home-outline.png",
                "folder-outline.png",
                "settings-outline.png",
                "home-filled.png",
                "folder-filled.png",
                "settings-filled.png",
                "img-icon.png",
                "pencil.png"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": [
        "tabs",
        "bookmarks",
        "storage",
        "identity",
        "activeTab",
        "debugger"
    ],

    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ]
}