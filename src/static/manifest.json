{
    "manifest_version": 3,
    "name": "Kollab Extension",
    "description": "Collaboration chrome extension",
    "version": "0.0.6",
    "action" : {
        "default_popup": "popup.html",
        "default_title": "Kollab Extension",
        "default_icon" : "icon.png"
    },
    "permissions": [
        "tabs",
        "bookmarks",
        "storage",
        "identity",
        "activeTab",
        "debugger"
    ],

    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ]
}